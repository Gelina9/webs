<script>
$(document).ready(function(e) {
	$(".item_icon").click(function(){
		$(this).parents().next(".bill_term").toggle();
	})
	$(".more_ticket").click(function(){
		if($(this).text() == "更多票券..."){
			$(this).hide();
			$(".m_t").slideDown();
		}

	})
	$(".add_ticket_btn").click(function(){
		$(".add_ticket_area").show();
	})
	$(".sel_act i").click(function(){
		if ($(this).hasClass("icon_blue_suc")){
			$(this).removeClass();
			$(this).addClass("icon_circle_no");
		}
		else if ($(this).hasClass("icon_circle_no")){
			$(this).removeClass();
			$(this).addClass("icon_blue_suc");
		}
	})
});
</script>
