<script>
	//输入框
	$("input").bind('input propertychange',function(){
		if($(this).val().length > 1){
			$(this).nextAll(".ion-close-circled").css({"display":"inherit"});
		}
		if($(this).val().length < 1){
			$(this).nextAll(".ion-close-circled").hide();
		}
	});
	$(".ion-close-circled").bind('click',function(){
		$(this).hide();
		$(this).prev('input').val('');
	});
	$(".my_ticket .sel_li").bind('click', function () {
		var txt = $(".ticket-total").text();
		if(txt == "(7张)"){
			$(".bill_box").hide();
			$(".bill_term").hide();
			$(".ticket-total").text("(0张)");
			$(".more_ticket").show();
			$(".more_ticket").text("无可用票券");
		}
		if(txt == "(0张)"){
			$(".bill_box").show();
			$(".bill_term").show();
			$(".ticket-total").text("(7张)")
			$(".more_ticket").text("更多票券...");
		}

	})
</script>
