 <script>
// 点击背景色变化
    	$(function(){
    		$(".ui-box").on("touchstart",function(){
    			$(this).css({"background-color":"#eee",})
    		})
    		$(".ui-box").on("touchend",function(){
    			$(this).css({"background-color":"#fff",})
    		})
    	})
    </script>
<script>
    angular.module('myApp', ['ionic']);

    //时间
    var swiper = new Swiper('.swiper-container', {
        scrollbar: '.swiper-scrollbar',
        scrollbarHide: true,
        slidesPerView: 'auto',
        centeredSlides: false,
        spaceBetween: 8,
        grabCursor: true
    });
    $(".ui-sch-time li span").click(function(){
        $(".ui-sch-time li span").removeClass("ui-sec-time");
        $(this).addClass("ui-sec-time");
    });
