<script>
    var swiper1 = new Swiper('.swiper-container', {
        scrollbar: '.swiper-scrollbar',
        scrollbarHide: true,
        slidesPerView: 'auto',
        centeredSlides: false,
        grabCursor: true
    });

     var swiper = new Swiper('.group_pic', {
        pagination: '.swiper-pagination',
        paginationClickable: true,
        // Disable preloading of all images
        preloadImages: false,
        // Enable lazy loading
        lazyLoading: true
    });
	$(document).ready(function(e) {
		$(".flim_img li").click(function(){
			$('html,body').animate({scrollTop: '0px'}, 100);
			$('html,body').css({"overflow":"hidden","height":"100%"});
			$(".group_pic").css({"z-index":"1"})
			$(".group_pic").css({"height":"100%"})

		})
		$(".group_pic").click(function(){
			$(".group_pic").css({"z-index":"-1","height":"0"})
			$("html,body").css({"overflow":"","height":""})
		})
		$(".ui_wbox").click(function(){
			$(".mask").hide();
			$(".ui_wbox").hide();
			$("body").css({"overflow":"","height":""})
			$("html").css({"overflow":"","height":""})
		})
		var h = $(".film_brief").height();
		if( h >= 173){
			$(".spread").show();
		}

		$(".spread").click(function(){
			$(this).prev().removeClass();
			$(this).hide();
			$(".pack_up").show();
		})
		$(".pack_up").click(function(){
			$(".film_abs span:first-child").addClass("film_brief");
			$(".spread").show();
			$(this).hide();
		});
	})
</script>
