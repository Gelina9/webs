<!doctype html>
<html>
<head>
<meta charset="utf-8">
<meta name="viewport" content="initial-scale=1, maximum-scale=1, user-scalable=no">
<meta name="apple-mobile-web-app-capable" content="yes">
<meta name="apple-mobile-web-app-status-bar-style" content="black">
<meta name="format-detection" content="telephone=no">
<meta name="format-detection" content="address=no">
<meta name="commit" content="undefined">
<meta http-equiv="cleartype" content="on">
<link href="../css/common.css" type="text/css" rel="stylesheet">
<link href="../css/detail.css" type="text/css" rel="stylesheet">
<link href="../css/newpage.css" type="text/css" rel="stylesheet" />
<link href="../ionic-v1.0.1/css/ionicons.min.css" rel="stylesheet">
<script type="text/javascript" src="../js/jquery.min.js"></script>
<script type="text/javascript" src="../js/public.js"></script>
<title>选择城市</title>
<style type="text/css">
	html,body{background-color: #fff;}
	a:visited{color: #333;}
a:hover, a:visited, a:link, a:active {
   color: #333;
}
</style>
<script type="text/javascript">
	$(function(){
//		选择城市左边框根据页面补齐
		var bodyStyle=function(){
			var currentCity=$(".current-city").outerHeight(true);
			var recentlyVisited=$(".recently-visited").outerHeight(true);
			var searchSelCity=$(".search_sel_city").outerHeight(true);
			var selCity=$(".sel-city").outerHeight(true);
			var cH=$("html").height()
			var selCityRight=cH-searchSelCity-recentlyVisited-currentCity;
			if(selCity>selCityRight){
				$(".sel-city-right").height(selCity);
			}else{
				$(".sel-city-right").height(selCityRight);
			}
		}
		bodyStyle()
	})
</script>
</head>

<body>
<section class="sec_fixed search_sel_city">
	<article class="search input_box">
		<i class="icon_search"></i>
		<input type="text" class="mod_search" placeholder="请输入城市名称进行查询" />
		<i class="ion-close-circled"></i>
	</article>
</section>
<section class="sel_city_box">
	<div class="current-city">当前：广州</div>
	<div class="recently-visited">
		<div class="recently-visited-box">
			<p class="recently-visited-caption">最近访问</p>
			<div class="recently-visited-city">
				<a href="movie.html">广州</a>
				<a href="movie.html">北京</a>
				<a href="movie.html">佛山</a>
			</div>
		</div>
	</div>
	<div class="sel-city">
		<div class="sel-city-left">
			<p>省份</p>
			<ul>
				<li class="is-active">宁夏回族</li>
				<li>广州</li>
				<li>广州</li>
				<li>广州</li>
				<li>广州</li>
				
			</ul>
		</div>
		<div class="sel-city-right">
			<p>城市</p>
			<ul>
				<li><a href="cinema-ina-city-other.html">广州<span class="sum-cinema">共1间影院<i></i></span></a></li>
				<li><a href="cinema-ina-city-other.html">广州<span class="sum-cinema">共1间影院<i></i></span></a></li>
				<li><a href="cinema-ina-city-other.html">广州<span class="sum-cinema">共1间影院<i></i></span></a></li>
			</ul>
		</div>
	</div>
</section>
<script>
	//输入框
	$("input").bind('input propertychange',function(){
		if($(this).val().length > 1){
			$(this).nextAll(".ion-close-circled").show();
		}
		if($(this).val().length < 1){
			$(this).nextAll(".ion-close-circled").hide();
		}
	});
	$(".ion-close-circled").bind('click',function(){
		$(this).hide();
		$(this).prev('input').val('');
	});
</script>
</body>
</html>
